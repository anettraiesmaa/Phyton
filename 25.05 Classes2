class Cat:
  #__init__ method rund automatically
  #it like templet to make diffrenet cats
  #when an object from this class is created
  #this method also called a 'constructor'
  def __init__(self, name, age): #self is required parameter and refers to the instance
    self.name = name
    self.age = age
    self.sound = 'Meow' #assigning a sound

  def voice(self):
    print(f'{self.sound}!')

  def eat(self, food):
    print(f'I am eatinf {food}')

  def indroduce(self):
    print(f'Hi, ma name is {self.name}, I am {self.age} years old. Nice to meat you!')

cat1 = Cat('Coder', 3)
cat2 = Cat('Minka', 12)
cat3 = Cat('Miisu', 5)

print(cat1.age)
print(cat3. name)
cat1.voice()
cat2.voice()
cat3.voice()
cat1.eat('chicken meat')
cat3.indroduce()
